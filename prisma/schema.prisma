// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Admin {
  id       String @id @default(cuid())
  login    String @unique
  password String
}

model Quiz {
  id         String  @unique @default(cuid())
  name       String
  active     Boolean
  link       String
  usersLimit Int
  started    Boolean @default(false)
}

model Question {
  id     String @unique @default(cuid())
  quizId String
  text   String
  image  String
  index  Int
}

model Answer {
  id         String  @unique @default(cuid())
  questionId String
  text       String
  isCorrect  Boolean
}

model Main {
  id          Int    @unique @default(1)
  title       String
  description String
  time        String
  date        String
  quizId      String
  price       String
}

model Promo {
  id     String @unique @default(cuid())
  quizId String
  limit  Int
  passed Int
}
